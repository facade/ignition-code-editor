{
    "name": "facade/ignition-code-editor",
    "description": "A code editor for Ignition",
    "keywords": [
        "laravel",
        "ignition",
        "editor"
    ],
    "homepage": "https://github.com/facade/code-editor",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "illuminate/support": " 5.8.*|^6.0",
        "facade/ignition": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Facade\\CodeEditor\\": "src"
        }
    },
    "scripts": {
        "format": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Facade\\CodeEditor\\CodeEditorServiceProvider"
            ]
        }
    }
}
